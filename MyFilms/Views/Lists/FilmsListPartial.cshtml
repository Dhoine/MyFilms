@model MyFilms.Models.ListsViewModels.FilmModel[]
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="row"></th>
            <th scope="row">Title</th>
            <th scope="row">Imdb rating</th>
            <th scope="row">User rating</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    @foreach (var film in Model)
    {
        <tr>
            <td>
                <img src="@film.PosterLink" alt=""/>
            </td>
            <td style="vertical-align: middle"><h3><a href="../../Info/@film.Id">@film.Name (@film.Year)</a></h3></td>
            <td style="text-align: center; vertical-align: middle"><h3>@film.ImdbRating</h3></td>
            <td style="text-align: center; vertical-align: middle"><h4><input type="number" name="@film.Id" id="@film.Id" class="rating" value="@film.UserRating" /></h4></td>
            <td style="text-align: center; vertical-align: middle"><button style="background: none; border: none "><h3><span class="glyphicon glyphicon-heart-empty"></span></h3></button></td>
            <td style="text-align: center; vertical-align: middle"><button style="background: none; border: none "><h3><span class="glyphicon glyphicon-eye-close"></span></h3></button></td>
        </tr>
    }
</table>
<div class="btn-group">
    @for (var i = 0; i < ViewBag.PagesCount; i++)
    {
        if (i + 1 == ViewBag.CurrentPage)
        {
            <span class="btn btn-default btn-danger">@(i + 1)</span>
        }
        else
        {
            <a href="@(i + 1)" class="btn btn-default">@(i + 1)</a>
        }
    }
</div>